<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Label1" Content="{Binding StudentName}" HorizontalAlignment="Left" Margin="304,274,0,0" VerticalAlignment="Top" Height="46" Width="116"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="264,129,0,0" VerticalAlignment="Top" Height="48" Width="98" Click="Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="122,297,0,0" Text="{Binding StudentName}" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="605,367,0,0" Text="{Binding StudentName}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
